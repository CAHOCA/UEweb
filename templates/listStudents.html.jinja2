{% extends "layout.html.jinja2" %}
<script>
function promo(promo){
        const url = "http://127.0.0.1:5000/promo?promo="+promo;
        window.location.href = url;
    };
function deleteStudent(id) {
  fetch("../../student" + id,  {
    method: 'DELETE'
  })
}
</script>
{% block body %}

    <div class="container">


    <!-- Breadcrumb -->
      <nav aria-label="breadcrumb" class="main-breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="./">Home</a></li>
          <li class="breadcrumb-item"><a href="javascript:void(0)">List Students</a></li>
        </ol>
      </nav>
      <!-- /Breadcrumb -->

    <!--ListStudents-->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 gutters-sm m-4">
        {% for student in students %}
        <div class="col mb-3">

          <div class="card" style="border-radius: 15px;">
            <img src="https://www.bootdey.com/image/340x120/FFB6C1/000000" alt="Cover" class="card-img-top">
            <div class="card-body text-center">
              <img src="https://bootdey.com/img/Content/avatar/avatar1.png" style="width:100px;margin-top:-65px" alt="User" class="img-fluid img-thumbnail rounded-circle border-0 mb-3">
              <h5 class="card-title">{{ student.first_name }} {{ student.name}} </h5>
              <a class="nav-link"  href="../promo?promo={{ student.promo }}">Promotion : {{ student.promo }}</a>
              <p class="text-muted font-size-sm">Poste actuel : {{ student.occupation }}</p>
            </div>
            <div class="card-footer">
              <a class="btn btn-light btn-sm btn-block text-primary" href="/list/students/edit?id={{ student.id }}">
                  <i class="bi bi-pencil-fill"></i>
                  Edit
              </a>
                <form action="/../../delete/student/" method="post">
              <button class="btn btn-light btn-sm text-secondary" type="submit" value="{{ student.id }}" name="id">
                  <i  class="bi bi-trash"></i>
                  Delete
              </button>
                </form>
            </div>
          </div>

        </div>
        {%  endfor %}
    </div>
    <!--/ListStudents-->

    </div>
{% endblock %}

